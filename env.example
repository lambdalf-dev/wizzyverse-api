# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# CORS Configuration
ALLOWED_DOMAIN=wizzyverse.com
ALLOWED_SUBDOMAINS=mint

# MongoDB Configuration
PROOFS_MONGODB_URI=mongodb://localhost:27017/wizzyverse-proofs
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/wizzyverse-proofs?retryWrites=true&w=majority

METADATA_MONGODB_URI=mongodb://localhost:27017/wizzyverse-metadata
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/wizzyverse-metadata?retryWrites=true&w=majority

SUBSCRIPTIONS_MONGODB_URI=mongodb://localhost:27017/wizzyverse-subscriptions
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/wizzyverse-subscriptions?retryWrites=true&w=majority

# Shuffle Configuration
SHUFFLE_PASSWORD=your_secure_password_here

# Blockchain Configuration
CHAIN_ID=137
# Chain ID for the blockchain network (e.g., 137 for Polygon, 1 for Ethereum)
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
# Contract address of the Wizzyverse NFT contract
RPC_URL=https://polygon-rpc.com
# RPC URL for the blockchain network
# Examples:
#   - Polygon: https://polygon-rpc.com
#   - Ethereum: https://eth.llamarpc.com
#   - Polygon Amoy: https://rpc-amoy.polygon.technology

# Metadata Asset Paths
# Use {modelId} as a placeholder that will be replaced with the actual model ID
METADATA_IMAGE_PATH=https://cdn.example.com/images/{modelId}.png
METADATA_ANIMATION_PATH=https://cdn.example.com/animations/{modelId}.mp4
# Placeholder image shown before reveal (pre-reveal state)
METADATA_PLACEHOLDER_IMAGE_PATH=https://cdn.example.com/placeholder.png
# Examples:
#   - "https://cdn.example.com/images/{modelId}.png"
#   - "/api/assets/images/{modelId}.png"
#   - "https://storage.googleapis.com/bucket/{modelId}.png"

# Metadata Default Description
# Default description used for tokens that don't have a custom description
# Users can eventually write their own descriptions which will be stored in the database
METADATA_DEFAULT_DESCRIPTION=A unique Wizzyverse NFT

# Environment
NODE_ENV=development
